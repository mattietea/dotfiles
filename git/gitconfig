[user]

  name = Matt Thomas
  email = mattcthomas@me.com

[alias]

  m = machete
  a = absorb

  amend = commit --amend --reuse-message=HEAD
  commend = !git commit --amend --no-edit && git push --force-with-lease="main"
  undo = reset --soft HEAD^1
  tidy = m reapply
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"

[fetch]

  prune = true

[branch]

  autoSetupMerge = true

[push]

  autoSetupRemote = true

[pull]

  rebase = true

[init]

  defaultBranch = main

[rebase]

  autosquash = true

[core]

  ignorecase = false
  excludesfile = ~/.gitignore_global
  editor = code --wait
