[user]

  name = Matt Thomas
  email = mattcthomas@me.com

[alias]

  m = machete
  a = absorb

  amend = commit --amend --reuse-message=HEAD
  commend = !git commit --amend --no-edit && git push --force-with-lease="main"
  undo = reset --soft HEAD^1
  tidy = m reapply

[fetch]

  prune = true

[branch]

  autoSetupMerge = true

[push]

	autoSetupRemote = true

[pull]

  rebase = true

[init]

	defaultBranch = main

[core]

  ignorecase = false
  excludesfile = ~/.gitignore_global
	editor = code --wait
